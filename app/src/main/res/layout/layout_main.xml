<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#643025"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="32dp">

        <!-- Imagen superior -->
        <ImageView
            android:id="@+id/imgHeader"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/arepin" />

        <!-- Spinner de empleados -->
        <Spinner
            android:id="@+id/spinnerOpciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@android:drawable/btn_default"
            android:padding="10dp" />

        <!-- Botón Fichar Entrada -->
        <Button
            android:id="@+id/btnFicharEntrada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            android:background="#000000"
            android:text="✅ Fichar Entrada"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:padding="14dp" />

        <!-- Botón Fichar Salida -->
        <Button
            android:id="@+id/btnFicharSalida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            android:background="#000000"
            android:text="❌ Fichar Salida"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:padding="14dp" />

        <!-- Botón Admin -->
        <Button
            android:id="@+id/btnAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#000000"
            android:text="⚙️ Admin"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:padding="14dp" />
    </LinearLayout>
</ScrollView>
