<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#643025"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📊 Estadísticas de Asistencia"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <Spinner
            android:id="@+id/spinnerEmpleados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_default"
            android:padding="10dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tvHorasTrabajadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🕒 Total horas trabajadas: -"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvDiasAsistidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✅ Días asistidos: -"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvDiasFaltados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="❌ Días faltados: -"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tvResumenSemanal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🗓️ Resumen semanal: -"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnVerHistorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📅 Ver historial detallado"
            android:textColor="#FFFFFF"
            android:backgroundTint="#000000"
            android:layout_marginTop="32dp"
            android:padding="14dp" />

    </LinearLayout>
</ScrollView>
