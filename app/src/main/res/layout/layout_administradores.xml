<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_administradores"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#643025"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvTituloAdministradores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Administradores"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnAgregarAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Administrador"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnEditarAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar Administrador"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnEliminarAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar Administrador"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />
</LinearLayout>